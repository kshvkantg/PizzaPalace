<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:id="@+id/aHome_fragment_recyclerView_Content"
    android:elevation="4dp"
    android:background="@drawable/ahome_style"
    android:layout_margin="4dp">

    <ImageView
        android:id="@+id/aHome_itemView_image"
        android:layout_width="135dp"
        android:layout_height="115dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/aHome_itemView_itemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Veggie Pizza"
        android:textColor="#313131"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/aHome_itemView_image"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/aHome_itemView_image"
        app:layout_constraintTop_toBottomOf="@+id/aHome_itemView_image" />

    <ImageView
        android:id="@+id/aHome_itemView_timeImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_baseline_alarm_on_24"
        app:layout_constraintStart_toStartOf="@+id/aHome_itemView_itemName"
        app:layout_constraintTop_toBottomOf="@+id/aHome_itemView_itemName" />

    <TextView
        android:id="@+id/aHome_prepTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif"
        android:gravity="top"
        android:text="15 min"
        android:textColor="#E7872D"
        android:textSize="13sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/aHome_itemView_timeImage"
        app:layout_constraintTop_toBottomOf="@+id/aHome_itemView_itemName" />


</androidx.constraintlayout.widget.ConstraintLayout>